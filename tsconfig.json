{
  "version": "2.0.2",
  "compilerOptions": {
    "lib": ["es6", "es2015.promise", "dom", "es2015"],
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "sourceMap": true
  },
  "exclude": [
    "build",
    "node_modules",
    "typings/browser.d.ts",
    "typings/browser",
    "www/lib/typeorm",
    "plugins",
    "platforms",
    "hooks"
  ]
}
